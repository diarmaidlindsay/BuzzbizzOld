<!-- ###################################################### -->



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hold_list__body_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:background="@drawable/image_list_cell">


   <TextView
        android:id="@+id/incoming_call_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:textSize="15sp" />


   <ImageButton
        android:id="@+id/answer_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/image_incoming_call_response"
        android:background="@null"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/answer"/>
</LinearLayout>