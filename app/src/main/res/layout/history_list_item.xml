<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_list__body_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/image_list_cell">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_in_or_out_mark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="@string/mark"
        android:scaleType="centerInside"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/history_list_source_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="14"
        android:textIsSelectable="false"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/history_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:textSize="13sp"/>
</LinearLayout>